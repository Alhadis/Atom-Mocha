{
	"name": "atom-mocha",
	"version": "0.0.1",
	"description": "Run Atom specs using bleeding-edge Mocha and Chai.",
	"repository": "https://github.com/Alhadis/Atom-Mocha",
	"license": "ISC",
	"bin": "./bin/atom-mocha",
	"atomTestRunner": "./bin/atom-mocha",
	"atom-mocha": {
		"autoIt": true,
		"css": "spec/assets/test.css",
		"js": {
			"header": "spec/assets/header-setup.js",
			"footer": ["spec/assets/footer-setup.js"]
		},
		"specPattern": "/-(?:test|spec)\\.(?:coffee|js)$/i",
		"mocha": {
			"bail": false
		}
	},
	"engines": {
		"atom": ">1.6.0"
	},
	"dependencies": {
		"get-options": ">=1.1.0",
		"mocha": "*",
		"chai": "*"
	}
}
