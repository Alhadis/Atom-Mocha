{
	"name": "atom-mocha",
	"version": "v2.1.2",
	"description": "Run Atom specs using bleeding-edge Mocha and Chai.",
	"repository": "https://github.com/Alhadis/Atom-Mocha",
	"author": "John Gardner <gardnerjohng@gmail.com>",
	"license": "ISC",
	"main": "./index.js",
	"atomTestRunner": "./index.js",
	"scripts": {
		"install": "node ./bin/post-install.js"
	},
	"engines": {
		"atom": ">1.6.0"
	},
	"files": ["bin", "lib", "index.js"],
	"dependencies": {
		"chai": "^4.2.0",
		"diff": "^4.0.1",
		"mocha": "^6.1.4",
		"print": "^1.1.0"
	},
	"devDependencies": {
		"@alhadis/eslint-config": "^1.2.0",
		"atom-ts-transpiler": "^1.5.2",
		"eslint": "^5.16.0",
		"typescript": "^3.5.2"
	},
	"atomTranspilers": [{
		"transpiler": "atom-ts-transpiler",
		"glob": "spec/*.{ts,tsx}",
		"options": {
			"compilerOptions": {},
			"cacheKeyFiles": [],
			"verbose": false
		}
	}],
	"eslintConfig": {
		"extends": "@alhadis/eslint-config/atom",
		"globals": {
			"AtomMocha": true,
			"resetDOM": true
		},
		"rules": {
			"no-underscore-dangle": 0
		},
		"overrides": [{
			"files": ["lib/main.js"],
			"rules": {
				"brace-style": 0,
				"indent": 0,
				"no-unexpected-multiline": 0
			}
		},{
			"files": ["lib/utils.js"],
			"rules": {"func-style": 0}
		}]
	}
}
