{
	"extends": "@alhadis/eslint-config/atom",
	"globals": {
		"AtomMocha": true,
		"resetDOM": true
	},
	"rules": {
		"no-underscore-dangle": 0
	},
	"overrides": [{
		"files": ["lib/extensions.js"],
		"rules": {
			"prefer-arrow-callback": 0
		}
	},{
		"files": ["lib/main.js"],
		"rules": {
			"brace-style": 0,
			"indent": 0,
			"no-unexpected-multiline": 0,
			"no-async-promise-executor": 0
		}
	},{
		"files": ["lib/reporter.js"],
		"rules": {
			"indent": 0,
			"no-unexpected-multiline": 0
		}
	},{
		"files": ["lib/utils.js"],
		"rules": {"func-style": 0}
	}]
}
